extends layout

block scripts
  script(type="text/javascript")
    var monday = #{date};
  <script type="text/javascript" src="javascripts/bootstrap-alerts.js"></script>
  <script src="javascripts/week.js"></script>
  <script src="http://twitter.github.com/bootstrap/1.4.0/bootstrap-modal.js"></script>
  <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css"/>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>
  <script>
  $(document).ready(function() {
  $("#datepicker").datepicker({ autoSize: false } { onSelect: function(dateText, inst) });
  });
  </script>

block styles
  <link rel="stylesheet" href="stylesheets/week.css">

block sidebar
    .sidebar
        h3
        <br/>
        <div id="datepicker"></div>

block content
  .content
    center
      table(id="CalendarTable", class="bordered-table", style="width:100% !important")
        tbody
          style(type="text/css")
            td{height:90px; width:150px}
          tr
            th Monday
            th Tuesday
            th Wednesday
            th Thursday
            th Friday
          each day in week
            tr
            each block in day 
              td(class="#{block}block") #{block} Block
    #eventCreatorModal.modal.hide.fade.
      <div class="modal-header">
        <a href="#" class="close">&times;</a>
        <h3>
          <input id="eventNameInput" class="xlarge" type="text" value="Event Name">
          <br />
          <small id="eventDate"><span class="eventBlock"></span> on <span class="eventDate"></span></small>
      </div>
      <div class="modal-body">
        <form>
          <table>
            <tr>
              <td class="noBorder" width="50%">
                <select name="normalSelect" id="blockSelect">
                </select>
                <br />
                <br />
                <textarea id="modalDescriptionBox">Description here</textarea>
              </td>
              <td class="noBorder">
                <p><input name="modalRadio1" type="radio"> Options</p>
                <p><input name="modalRadio1" type="radio"> and</p>
                <p><input name="modalRadio1" type="radio"> Stuff</p>
              </td>
            </tr>
          </table>
        </form>
      </div>
      <div class="modal-footer">
        <input id="saveButton" type="submit" class="btn primary" value="Save">
        <input id="cancelButton" type="submit" class="btn secondary" value="Cancel">
      </div>
    </div>
    <!-- End Modal Content -->
