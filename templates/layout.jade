!!!
html
  head
    title
      | #{title} | Hopkins Planner

    // for IE6-8 support of HTML elements
    // if lt IE 9
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
   
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/stylesheets/bootstrap.min.css")
    script(type="text/javascript", src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")
    script(type="text/javascript", src="/javascripts/bootstrap.min.js")
    script(type='text/javascript')
      var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-38215846-1']);
        _gaq.push(['_trackPageview']);
        (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();


    block scripts

    link(rel="stylesheet", href="/stylesheets/style.css")
    style
      .brand {margin-left: 20px !important;}
    block styles
      
  body(data-spy="scroll")
    block header
      .navbar.navbar-fixed-top
        .navbar-inner
          .container
            if !loggedIn
              a.brand(href="/") Hopkins Planner
            else
              a.brand(href="/") #{name}'s Planner
            .nav-collapse
              ul.nav
                if loggedIn
                  li
                    a(href="/suggest") Feedback
                  li
                    a(href="/setup") Preferences
                  li
                    a(href="/logout") Logout
    .container-fluid
      .row-fluid
        .span2
          block sidebar
        .span10
          block content
      .push
      block footer
        footer.footer
          p Brought to you by the Hopkins Computer Science Club.
